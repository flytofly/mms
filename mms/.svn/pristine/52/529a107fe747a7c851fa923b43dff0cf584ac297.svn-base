<script type="text/javascript">
function checkAll(){
	$(".ctaskIds").each(function(i,item){
		if($("#check_all").attr("checked")=="checked"){
			$(item).attr("checked","checked");
		}else{
			$(item).removeAttr("checked");
		}
	});
}

// 获取所有选中的taskid
function getids(){
	var ids = new Array();
	$(".ctaskIds:checked").each(function(i,item){
		 var id = $(item).attr("id").split("_")[1];
		 ids.push(id);
	});
	return ids;
}

// 批量启用
function batchtoEnabled(ids){
	if(ids.length==0){
		alert("未选择任何任务!");
		return;
	}
	var r=confirm("确认要启用" + ids.length +"条任务吗？");
	if(!r){
		return;
	}
	$.post("./batchToEnabled", { taskids: ids.toString(),use_status:1},
		function(data){
		alert("成功启用: " + data +"条任务");
		var para= $("#form").serialize() ;
		location.href="./list?"+para;
	});
}

function batchEnabled(){ 
	var ids =  getids();
	batchtoEnabled(ids); 
}

function batchDisabled(){ 
	var ids =  getids();
	batchtoDisabled(ids); 
}

//批量停用
function batchtoDisabled(ids){
	if(ids.length==0){
		alert("未选择任何任务!");
		return;
	}
	var r=confirm("确认要停用" + ids.length +"条任务吗？");
	if(!r){
		return;
	}
	
	$.post("./batchToEnabled", { taskids: ids.toString(),use_status:2},
		function(data){
		alert("成功停用: " + data +"条任务");
		var para= $("#form").serialize() ;
		location.href="./list?"+para;
	});
}

function setpickrequency(){
	var taskids =  getids();
	if(taskids==""){
		alert("请选择规则！");
		return;
	}
	window.open("#(uri)/task/editpickrequency?taskids="+taskids,"","width=800,height=600,location=no");
}

