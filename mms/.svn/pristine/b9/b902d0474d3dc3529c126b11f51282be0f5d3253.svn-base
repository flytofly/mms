<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
<title>个人信息</title>
<link href="${tp}/public/css/basic.css" rel="stylesheet" type="text/css" />
<link href="${tp}/public/css/edit.css" rel="stylesheet" type="text/css" />

<link href="${uri}/public/jquery/css/validationEngine.jquery.css" rel="stylesheet" type="text/css" />
<script src="${uri}/public/jquery/js/jqsel.js"></script>
<script src="${uri}/public/jquery/localization/jquery.validationEngine-zh_CN.js" type="text/javascript" charset="utf-8"></script>
<script src="${uri}/public/jquery/js/jquery.validationEngine.js" type="text/javascript" charset="utf-8"></script>
<script src="${uri}/public/jquery/js/jquery.alert.js" type="text/javascript"></script>
<script src="${uri}/public/jquery/js/jquery.md5.js" type="text/javascript"></script>
<script>
	jQuery(document).ready(function() {
		jQuery("#cform").validationEngine();
	});

	function clickSubmit() {
		if (jQuery('#cform').validationEngine('validate')) {
			$('#txtOldPwd').val($.md5(($('#txtOldPwd').val())));
			$('#txtNewPwd1').val($.md5(($('#txtNewPwd1').val())));
			$('#txtNewPwd2').val($.md5(($('#txtNewPwd2').val())));
			$('#cform').submit();
		} else {
			return false;
		}
	}
</script>
</head>
<body>
<!-- <div style="width: 100% ;height:5px"></div> -->
<table class="searchtb" >
    <tr class="searchtr1">
      <td class="searchtd1"></td>
      <td class="searchtd2">
      	<img src="${tp}/public/images/scbj-icon.png" style="width:16px; height:16px; margin-bottom:-2px;"/>修改密码
      </td>
      <td class="searchtd3"></td>
    </tr>
    <tr>
      <td colspan="3">

    <form name="cform" id="cform" action="modpasspost" method="post">
    
    	  <input type="hidden" name="record.customer_id" value="${suser.customer_id}" />
		  <input type="hidden" name="record.customer_name" value="${suser.customer_name}" />
      
      <table class="datatb"  cellpadding="3" cellspacing="1" >
          <tbody>
        
		
        <tr class="listtr" >
		    <td width="35%" class="editleft">用户名:</td>
		    <td width="65%" class="editright">${suser.customer_name}</td>
        </tr>
		<tr class="listtr" >
			<td class="editleft">请输入旧密码:</td>
			<td class="editright">
				<input type="password" class="validate[required] re_input" name="passwordOld" value="" id="txtOldPwd" />
			</td>
		</tr>
		<tr class="listtr" >
			<td class="editleft">请输入新密码:</td>
			<td class="editright">
			<input type="password"
				class="validate[required] re_input" name="record.password"
				value="" id="txtNewPwd1"  maxlength="32"/></td>
		</tr>
		<tr class="listtr" >
			<td class="editleft">再次输入新密码:</td>
			<td class="editright">
			<input type="password"
				class="validate[required,equals[txtNewPwd1]] re_input"
				name="repeat_password" value="" id="txtNewPwd2"  maxlength="32"/></td>
		</tr>
		<tr class="listtr" >
			<td align="center" colspan="2">
				<input name="" type="button" class="btn"  value="保存" onclick="return clickSubmit()" /> 
				<input name="" type="reset" class="btn"  value="重置" /></td>
		</tr>
          </tbody>
        </table>
        
       </form>
        </td>
    </tr>
</table>
<%@include file="/public/files/loading.jsp"%> 

<script language="javascript">
<%
	String result=(String)request.getAttribute("result");
	if(result != null && result != ""){
		out.write("alert('" + result + "');");
	}
	request.removeAttribute("result");
%>
</script>
</body>
</html>
