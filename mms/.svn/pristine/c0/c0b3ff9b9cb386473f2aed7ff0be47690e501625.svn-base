        </div>
  </div>
<script>
  
  // 省份选择添加事件
  $(".provicne").change(function(e){
	  var provicne_code = e.target.value;
	  var provicne_code_now = $("#province_now").val();
	  if(e.target.checked){
		  if(provicne_code_now == provicne_code){
			  $(".city").attr("checked",true);
		  }else{
			  $.ajax({
					type : "post",
					async : false,
					url : "/mms/getCityByPid",
					dataType :"text",
					data : {"pid":provicne_code},
					success:function(data){
						// 清空所有的市区
						$("#current_city").empty();
						
						<li><label><input type="checkbox" class="city" >石家庄市</label></li>
						
			}});
		  }
	  }else{
		  if(provicne_code_now == provicne_code){
			  $(".city").attr("checked",false);
		  }else{
			  alert("后台ajax请求  ！");
		  }
	  }
  });
  
</script>
 </body>
#end