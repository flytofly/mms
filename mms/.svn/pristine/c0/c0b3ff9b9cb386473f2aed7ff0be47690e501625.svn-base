                            <li><label><input type="checkbox" class="provicne" value="210000">辽宁省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="220000">吉林省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="230000">黑龙江省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="320000">江苏省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="330000">浙江省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="340000">安徽省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="350000">福建省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="360000">江西省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="370000">山东省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="410000">河南省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="420000">湖北省</label></li>
                            <li><label><input type="checkbox" class="provicne" value="430000">湖南省</label></li>
